PROJECT_ROOT=C:/Users/user/MyGitRepos/agent-042

# =====================
# MLflow server config
# =====================

# Port on the host machine
MLFLOW_PORT=5050
MLFLOW_SERVER_ALLOWED_HOSTS=antonlab.ru,localhost:5000,127.0.0.1

# Backend store (PostgreSQL)
MLFLOW_BACKEND_URI=postgresql://mlflow:mlflow@postgres:5432/mlflow

# Default artifact root (Yandex Object Storage bucket)
# IMPORTANT: this bucket already exists and is shared with DVC
MLFLOW_ARTIFACT_ROOT=s3://agent-042-mlflow-artifacts/

# =====================
# Yandex Object Storage
# =====================

# S3-compatible endpoint for Yandex Cloud
AWS_ENDPOINT_URL=https://storage.yandexcloud.net

# Region is required by boto3, even if ignored
AWS_DEFAULT_REGION=ru-central1

# Access credentials (dev only!)
AWS_ACCESS_KEY_ID=YCAJ...
AWS_SECRET_ACCESS_KEY=YCN7o...

# =====================
# PostgreSQL
# =====================

POSTGRES_DB=mlflow
POSTGRES_USER=mlflow
POSTGRES_PASSWORD=mlflow
POSTGRES_PORT=5432
